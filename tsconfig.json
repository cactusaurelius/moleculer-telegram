
{
  "compilerOptions": {
    "paths": {
      "*": ["types/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "pretty": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "sourceMap": true,
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
